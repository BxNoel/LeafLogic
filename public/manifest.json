{
    "manifest_version": 3,
    "name": "LeafLogic",
    "version": "1.0",
    "description": "Chrome Extension that analyzes AI usage and provides eco-friendly alternatives.",
    "permissions": ["storage"],
    "action": {
      "default_popup": "index.html"
    },
    "content_scripts": [
      {
        "matches": ["https://chat.openai.com/*",
                    "https://chatgpt.com/*"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ],
    "web_accessible_resources": [
    {
      "resources": ["pageFetchHook.js"],
      "matches": ["https://chatgpt.com/*",
                  "https://chat.openai.com/*"]
    }
  ]
  }
  